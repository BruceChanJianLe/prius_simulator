          <topic>top_lidar</topic>
        </xacro:if>
        <xacro:unless value="${namespace == '/'}">
          <gz_frame_id>${namespace}/top_lidar</gz_frame_id>
          <topic>${namespace}/top_lidar</topic>
        </xacro:unless>
        <update_rate>10</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>640</samples>
              <resolution>1</resolution>
              <min_angle>-3.1</min_angle> <!-- about -180° -->
              <max_angle>3.1</max_angle>  <!-- about +180° -->
            </horizontal>
            <vertical>
              <samples>32</samples>
              <resolution>1</resolution>
              <min_angle>-0.523</min_angle>
              <max_angle>0.1745</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.08</min>
            <max>130.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </link>
    <joint name="top_lidar_joint" type="fixed">
      <parent>chassis</parent>
      <child>top_lidar</child>
    </joint>


    <!-- Ackermann Drive -->
